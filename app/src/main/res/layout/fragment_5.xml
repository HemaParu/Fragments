<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment5">

  <EditText
      android:id="@+id/editTextConstraint1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/editTextConstraint2"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:hint="User Name"
      android:inputType="text" />

  <EditText
      android:id="@+id/editTextConstraint2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/button_fragment4"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginBottom="32dp"
      android:hint="Password"
      android:inputType="text" />

  <Button
      android:id="@+id/button_fragment4"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="26dp"
      android:layout_marginBottom="386dp"
      android:layout_toStartOf="@+id/button2_fragment4"
      android:text="Login" />

  <Button
      android:id="@+id/button2_fragment4"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="32dp"
      android:layout_marginBottom="386dp"
      android:text="Reset" />

</RelativeLayout>